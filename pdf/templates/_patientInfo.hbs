    <tr>
      <td style="padding: 5px 25px; width: 25%; vertical-align: top;">
        <div style="font-size: 10px; color: #323232; padding-bottom: 2px;">HI Claim Number</div>
        <div style="font-size: 11px;">{{#if patient.hiClaimNumber}}{{patient.hiClaimNumber}}{{else}}N/A{{/if}}</div>
      </td>
      <td style="padding: 5px 25px; width: 25%; vertical-align: top;">
        <div style="font-size: 10px; color: #323232; padding-bottom: 2px;">Start of care date</div>
        <div style="font-size: 11px;">{{#if patient.startOfCareDate}}{{patient.startOfCareDate}}{{else}}N/A{{/if}}</div>
      </td>
      <td style="padding: 5px 8px; width: 25%; vertical-align: top;">
        <div style="font-size: 10px; color: #323232; padding-bottom: 2px;">Certification period</div>
